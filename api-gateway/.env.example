# API Gateway Environment Configuration

# Server Configuration
PORT=8000
NODE_ENV=development
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-with-256-bit-key
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Microservices URLs
AUTH_SERVICE_URL=http://localhost:8001
ROOM_SERVICE_URL=http://localhost:8002
BOOKING_SERVICE_URL=http://localhost:8004
REPORTING_SERVICE_URL=http://localhost:8003
NOTIFICATION_SERVICE_URL=http://localhost:8005

# Database URLs (if needed for gateway-specific data)
DATABASE_URL=sqlite:./gateway.db

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Health Check
HEALTH_CHECK_INTERVAL=30000

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api/docs

# Security Headers
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Circuit Breaker Configuration
CIRCUIT_BREAKER_TIMEOUT=5000
CIRCUIT_BREAKER_ERROR_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=30000
